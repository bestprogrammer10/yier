/* 记账小程序登录首页样式 */
/* 遵循 KISS 原则：简洁清晰的样式结构 */

.login-container {
  position: relative;
  min-height: 100vh;
  background: linear-gradient(135deg, #0F172A 0%, #1E293B 100%);
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

/* 背景装饰 - 轻量级视觉增强 */
.bg-decoration {
  position: absolute;
  top: -50%;
  right: -20%;
  width: 80%;
  height: 150%;
  background: radial-gradient(circle, rgba(46, 91, 255, 0.15) 0%, transparent 70%);
  transform: rotate(45deg);
  z-index: 0;
}

/* 主要内容包装器 */
.content-wrapper {
  position: relative;
  z-index: 1;
  flex: 1;
  display: flex;
  flex-direction: column;
  padding: 60rpx 40rpx 40rpx;
}

/* 头部区域 */
.header-section {
  text-align: center;
  margin-bottom: 80rpx;
  animation: fadeInUp 0.6s ease-out;
}

.app-logo {
  position: relative;
  width: 160rpx;
  height: 160rpx;
  margin: 0 auto 30rpx;
  background: linear-gradient(135deg, #2E5BFF 0%, #1E40AF 100%);
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 10rpx 30rpx rgba(46, 91, 255, 0.3);
}

.logo-image {
  width: 100%;
  height: 100%;
  border-radius: 40rpx;
}

.logo-placeholder {
  position: absolute;
  font-size: 80rpx;
  line-height: 160rpx;
}

.app-name {
  display: block;
  font-size: 48rpx;
  font-weight: 700;
  color: #FFFFFF;
  margin-bottom: 12rpx;
  letter-spacing: 2rpx;
}

.app-slogan {
  display: block;
  font-size: 28rpx;
  color: #94A3B8;
  font-weight: 400;
}

/* 登录表单区域 */
.form-section {
  background: rgba(255, 255, 255, 0.05);
  backdrop-filter: blur(20rpx);
  border-radius: 32rpx;
  padding: 40rpx 32rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.1);
  margin-bottom: 40rpx;
}

/* 登录方式切换标签 */
.login-tabs {
  display: flex;
  gap: 20rpx;
  margin-bottom: 40rpx;
  background: rgba(0, 0, 0, 0.2);
  padding: 8rpx;
  border-radius: 16rpx;
}

.tab-item {
  flex: 1;
  height: 72rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 12rpx;
  transition: all 0.3s ease;
  gap: 8rpx;
}

.tab-item.active {
  background: #2E5BFF;
  color: #FFFFFF;
  font-weight: 600;
}

.tab-item:not(.active) {
  color: #94A3B8;
}

.tab-icon {
  font-size: 28rpx;
}

.tab-text {
  font-size: 28rpx;
}

/* 登录方法容器 */
.login-method {
  animation: fadeIn 0.4s ease-out;
}

/* 微信登录方式 */
.wechat-info {
  text-align: center;
  margin-bottom: 40rpx;
}

.info-text {
  display: block;
  font-size: 32rpx;
  color: #FFFFFF;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.info-subtext {
  display: block;
  font-size: 24rpx;
  color: #94A3B8;
}

.wechat-login-btn {
  width: 100%;
  height: 96rpx;
  background: linear-gradient(135deg, #07C160 0%, #05A048 100%);
  border-radius: 24rpx;
  color: #FFFFFF;
  font-size: 32rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  border: none;
  margin-bottom: 30rpx;
  transition: transform 0.2s ease;
}

.wechat-login-btn:active {
  transform: scale(0.98);
}

.btn-icon {
  font-size: 36rpx;
}

/* 隐私协议 */
.privacy-agreement {
  margin-top: 30rpx;
}

.privacy-label {
  display: flex;
  align-items: flex-start;
  gap: 6rpx;
  font-size: 22rpx;
  color: #94A3B8;
  line-height: 1.4;
}

.privacy-label checkbox {
  transform: scale(0.8);
  margin-top: -2rpx;
}

.link {
  color: #2E5BFF;
  text-decoration: underline;
}

/* 手机号登录方式 */
.input-group {
  margin-bottom: 40rpx;
}

.input-item {
  margin-bottom: 32rpx;
}

.input-label {
  display: block;
  font-size: 26rpx;
  color: #CBD5E1;
  margin-bottom: 12rpx;
  font-weight: 500;
}

.input-wrapper {
  position: relative;
  display: flex;
  align-items: center;
  background: rgba(255, 255, 255, 0.08);
  border-radius: 16rpx;
  padding: 0 24rpx;
  height: 88rpx;
  border: 2rpx solid transparent;
  transition: all 0.3s ease;
}

.input-wrapper:focus-within {
  border-color: #2E5BFF;
  background: rgba(46, 91, 255, 0.1);
}

.input-field {
  flex: 1;
  height: 100%;
  font-size: 32rpx;
  color: #FFFFFF;
}

.input-field::placeholder {
  color: #64748B;
}

.clear-btn {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.1);
  color: #94A3B8;
  display: none;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  margin-left: 12rpx;
}

.clear-btn.show {
  display: flex;
}

.code-wrapper {
  gap: 12rpx;
}

.code-btn {
  height: 64rpx;
  padding: 0 24rpx;
  background: #2E5BFF;
  color: #FFFFFF;
  border-radius: 12rpx;
  font-size: 26rpx;
  font-weight: 600;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  white-space: nowrap;
}

.code-btn.disabled {
  background: #334155;
  color: #64748B;
}

/* 主登录按钮 */
.login-btn {
  width: 100%;
  height: 96rpx;
  background: #334155;
  color: #64748B;
  border-radius: 24rpx;
  font-size: 32rpx;
  font-weight: 600;
  border: none;
  transition: all 0.3s ease;
}

.login-btn.active {
  background: linear-gradient(135deg, #2E5BFF 0%, #1E40AF 100%);
  color: #FFFFFF;
  box-shadow: 0 10rpx 30rpx rgba(46, 91, 255, 0.3);
}

.login-btn:active:not(.active) {
  transform: none;
}

.login-btn.active:active {
  transform: scale(0.98);
}

/* 快速操作 */
.quick-actions {
  display: flex;
  justify-content: space-between;
  margin-top: 24rpx;
}

.action-text {
  font-size: 24rpx;
  color: #2E5BFF;
  text-decoration: underline;
}

/* 其他登录方式 */
.other-methods {
  margin-top: 20rpx;
}

.divider {
  display: flex;
  align-items: center;
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.divider-line {
  flex: 1;
  height: 1rpx;
  background: rgba(255, 255, 255, 0.1);
}

.divider-text {
  font-size: 22rpx;
  color: #64748B;
}

.method-icons {
  display: flex;
  justify-content: center;
  gap: 30rpx;
}

.method-icon {
  width: 80rpx;
  height: 80rpx;
  background: rgba(255, 255, 255, 0.05);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.1);
}

/* 安全提示 */
.security-tips {
  position: absolute;
  bottom: 40rpx;
  left: 0;
  right: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  padding: 0 40rpx;
}

.lock-icon {
  font-size: 24rpx;
}

.tip-text {
  font-size: 22rpx;
  color: #64748B;
}

/* Toast 提示 */
.toast {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background: rgba(15, 23, 42, 0.95);
  color: #FFFFFF;
  padding: 24rpx 40rpx;
  border-radius: 16rpx;
  font-size: 28rpx;
  z-index: 999;
  opacity: 0;
  transition: opacity 0.3s ease;
  pointer-events: none;
}

.toast.show {
  opacity: 1;
}

/* 动画 */
@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

/* 响应式适配 */
@media (max-width: 375px) {
  .content-wrapper {
    padding: 50rpx 30rpx 30rpx;
  }

  .app-name {
    font-size: 44rpx;
  }
}